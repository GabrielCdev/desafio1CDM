<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>Desafio 1 - CRUD</title>
    <link rel="shortcut icon" href="/logo/favicon.ico" />
    <link rel="stylesheet" href="/css/style.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
    <script src="/js/showscript.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
      <a class="navbar-brand" href="">
          <img src="https://scontent.fssa7-1.fna.fbcdn.net/v/t1.0-9/119769804_3503780869658447_9157142273785200666_n.jpg?_nc_cat=106&_nc_sid=730e14&_nc_ohc=vys3ZUEEECsAX9xpVsx&_nc_ht=scontent.fssa7-1.fna&oh=9490d8133f08873b427c4493f72c01ba&oe=5F98B9ED" width="65" height="65" usemap="#workmap">
      </a>
      <map name="workmap">
          <area shape="rect" coords="-00,-00,130,98" alt="logo" href="http://localhost:3000/show-cliente">
      </map>
      <ul class="navbar-nav">
          <li class="nav-item">
              <a class="nav-link" href="/cliente">Cadastrar Clientes</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/emprestimo">Cadastrar Empréstimos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/filial">Cadastrar Filiais</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/funcionario">Cadastrar Funcionários</a>
        </li>
          <li class="nav-item">
              <a class="nav-link" href="/livros">Cadastrar Livros</a>
          </li>
      </ul>
  </nav>
    <div class="container">
      <div class="table-responsive">
        <div class="table-wrapper">
          <div class="table-title">
            <div class="row">
              <div class="col-sm-8">
                <h2><b>Registros</b></h2>
              </div>
              <div class="col-sm-4">
                <div class="search-box">
                  <i class="material-icons">&#xE8B6;</i>
                  <input type="text" id="myInput" onkeyup="filterFunction()" class="form-control" placeholder="Pesquisar&hellip;"/>
                </div>
              </div>
            </div>
          </div>
          <table class="table table-striped table-hover table-bordered" id="myTable">
            <thead>
              <tr>
                <th class="form-title">Nome completo</th>
                <th class="form-title">E-mail</th>
                <th class="form-title">Contato 1</th>
                <th class="form-title">Endereço</th>
                <th class="form-title">Complemento</th>
                <th class="form-title">CEP</th>
                <th class="form-title">Cidade</th>
                <th class="form-title">Estado</th>
                <th class="form-title">Ação</th>
              </tr>
            </thead>

            <tbody>
              <% clientes.forEach(function(details) { %>
              <tr id="myUL">
                <td class="inputs-bd"><%= details.nome %> <%= details.sobrenome %></td>
                <td class="inputs-bd"><%= details.email %></td>
                <td class="inputs-bd"><%= details.contato1 %></td>
                <td class="inputs-bd"><%= details.endereco %></td>
                <td class="inputs-bd"><%= details.complemento %></td>
                <td class="inputs-bd"><%= details.cep %></td>
                <td class="inputs-bd"><%= details.cidade %></td>
                <td class="inputs-bd"><%= details.estado %></td>
                <td class="inputs-bd">
                  <a href="/edit-cliente/<%= details._id %>" class="edit" title="Editar" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                  <a href="/delete-cliente/<%= details._id %>" class="delete" title="Remover" data-toggle="tooltip" ><i class="material-icons">&#xE872;</i></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <a href="/cliente" class="btn btn-info add-new"><i class="fa fa-plus"></i> Novo cliente</a>
        </div>
      </div>
    </div>
  </body>
</html>
