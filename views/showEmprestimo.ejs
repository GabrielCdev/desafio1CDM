<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Registro</title>
    <link rel="shortcut icon" href="/logo/favicon.ico" />
    <link rel="stylesheet" href="/css/indexEmprestimo.css">
</head>

<body>
    <h2> Registros</h2>
        <table border="1">
            <thead>
                <tr>
                    <td>Nome</td>
                    <td>Sobrenome</td>
                    <td>CPF</td>
                    <td>Telefone</td>
                    <td>Endereço</td>
                    <td>Data de Empréstimo</td>
                    <td>Data de devolução</td>
                    <td>Livro Emprestado</td>
                    <td>Multa</td>
                    <td>Ação</td>
                </tr>
            </thead>

            <tbody>
                <% data.forEach(function(details) { %>
                    <tr>
                        <td><%= details.name %></td>
                        <td><%= details.surname %></td>
                        <td><%= details.cpf %></td>
                        <td><%= details.telefone %></td>
                        <td><%= details.endereco %></td>
                        <td><%= details.data %></td>
                        <td><%= details.data2 %></td>
                        <td><%= details.livroEmprestado %></td>
                        <td><%= details.multa %></td>
                        <td>
                            <a href="/edit-emprestimo/<%= details._id %>">Editar</a> -
                            <a href="/delete-emprestimo/<%= details._id %>">Deletar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <button><a href="/emprestimo">Novo</a></button>
</body>
</html>