<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Desafio 1 - CRUD</title>
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    </head>

    <body>
        <div class="container">
            <div class="col-md-12 order-md-1">
                <div class="row">
                    <div class="py-3 col-sm-8"><h2><b>Editar registro</b></h2></div>
                </div>
            </div>
            <div class="table-responsive">
                <div class="table-wrapper">
                    <table class="table table-striped table-hover table-bordered" id="myTable">
                        <thead>
                            <tr>
                                <th class="form-title">Nome completo</th>
                                <th class="form-title">E-mail</th>
                                <th class="form-title">Contato 1</th>
                                <th class="form-title">Contato 2</th>
                                <th class="form-title">Endereço</th>
                                <th class="form-title">Complemento</th>
                                <th class="form-title">CEP</th>
                                <th class="form-title">Cidade</th>
                                <th class="form-title">Estado</th>
                                <th class="form-title">Ação</th>
                            </tr>
                        </thead>                     
                        <tbody>
                            <% data.forEach(function(details) { %>
                                <form action="/edit/<%= details._id %>" method="POST">
                                    <td><input type="text" value="<%= details.nome %>" name="nome"></td>
                                    <td><input type="text" value="<%= details.sobrenome %>" name="sobrenome"></td>
                                    <td><input type="email" value="<%= details.email %>" name="email"></td>
                                    <td><input type="text" value="<%= details.contato1 %>" name="contato1"></td>
                                    <td><input type="text" value="<%= details.contato2 %>" name="contato2"></td>
                                    <td><input type="text" value="<%= details.endereco %>" name="endereco"></td>
                                    <td><input type="text" value="<%= details.complemento %>" name="complemento"></td>
                                    <td><input type="text" value="<%= details.cep %>" name="cep"></td>
                                    <td><input type="text" value="<%= details.cidade %>" name="cidade"></td>
                                    <td><input type="text" value="<%= details.estado %>" name="estado"></td>
                                    <a href="/show" class="btn btn-primary">Voltar</a>
                                    &nbsp;
                                    <button type="submit" class="btn btn-success">Confirmar</button>
                                </form>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>