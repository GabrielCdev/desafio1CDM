<h1>Cadastrar Empresa</h1>
<form action="/show-empresa" method="POST">

<div class="container-fluid">
  <div class="jumbotron jumbotron-fluid">
    <div class="container-fluid">
     
        <div class="row">
            <div id="div1" class="col-sm-5">
              <label>Nome:</label>
              <input type="text" name="Inpname" required>
            </div>
            <div class="col-sm-5">
               <label>Nome fantasia:</label>
              <input type="text" name="InpFantasia" required>
            </div>
        </div>
        
        <div  class="row">
            <div id="div2" class="col-sm-5">
              <br>
              <label>CNPJ:</label>
              <input onkeyup="cnpjFunc()" maxlength="18" id="inpCnpj" type="text" name="inpCnpj" required>
            </div>
            <div class="col-md-5">
              <br>
              <label>Email:</label>
             <input type="email" name="InpEmail" required>
            </div>
        </div>

       <br>
        <div class="row">
            <div id="div3" class="col-sm-5">
              <label>Contato:</label>
              <input id="contato" maxlength="14" onkeyup="contatoFunc()" type="text" name="InpTel" required>
            </div>
            <div class="col-sm-5">
              <label>Endere√ßo:</label>
              <input id="input" type="text" name="InpEnd" required>
            </div>
        </div>
        
        <div  class="row">
            <div id="div4" class="col-sm-5">
              <br>
              <label>Estado:</label>
              <select class="select h-50 w-50" id="estado" name="InpEs">
