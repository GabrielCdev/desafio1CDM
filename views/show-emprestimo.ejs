<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Registro</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
        <link rel="shortcut icon" href="/logo/favicon.ico" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/editEmprestimo.css" />
    <link rel="shortcut icon" href="/logo/favicon.ico" />
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <a class="navbar-brand" href="">
            <img src="https://scontent.fssa7-1.fna.fbcdn.net/v/t1.0-9/119769804_3503780869658447_9157142273785200666_n.jpg?_nc_cat=106&_nc_sid=730e14&_nc_ohc=vys3ZUEEECsAX9xpVsx&_nc_ht=scontent.fssa7-1.fna&oh=9490d8133f08873b427c4493f72c01ba&oe=5F98B9ED" width="65" height="65" usemap="#workmap">
        </a>
        <map name="workmap">
            <area shape="rect" coords="-00,-00,130,98" alt="logo" href="http://localhost:3000/show-emprestimo">
        </map>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/cliente">Cadastrar Clientes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/filial">Cadastrar Filiais</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/emprestimo">Cadastrar Empréstimos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/funcionario">Cadastrar Funcionários</a>
          </li>
            <li class="nav-item">
                <a class="nav-link" href="/livros">Cadastrar Livros</a>
            </li>
        </ul>
    </nav>
    <h2> Registros</h2>
        <table border="1">
            <thead>
                <tr>
                    <td>Nome</td>
                    <td>Sobrenome</td>
                    <td>CPF</td>
                    <td>Telefone</td>
                    <td>Endereço</td>
                    <td>Data de Empréstimo</td>
                    <td>Data de devolução</td>
                    <td>Livro Emprestado</td>
                    <td>Multa</td>
                    <td>Ação</td>
                </tr>
            </thead>

            <tbody>
                <% emprestimo_devolucao.forEach(function(details) { %>
                    <tr>
                        <td><%= details.name %></td>
                        <td><%= details.surname %></td>
                        <td><%= details.cpf %></td>
                        <td><%= details.telefone %></td>
                        <td><%= details.endereco %></td>
                        <td><%= details.data %></td>
                        <td><%= details.data2 %></td>
                        <td><%= details.livroEmprestado %></td>
                        <td><%= details.multa %></td>
                        <td>
                            <a href="/edit-emprestimo/<%= details._id %>">Editar</a> -
                            <a href="/delete-emprestimo/<%= details._id %>">Deletar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <button id="btnNovo"><a href="/emprestimo">Novo</a></button>
</body>
</html>