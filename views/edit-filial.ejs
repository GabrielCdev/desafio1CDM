<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <link rel="shortcut icon" href="/logo/favicon.ico" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/editFilial.css"/>
    <script src="/js/funcoes.js"></script>
    <title>CRUD Library</title>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
      <a class="navbar-brand" href="">
        <img src="https://scontent.fssa7-1.fna.fbcdn.net/v/t1.0-9/119769804_3503780869658447_9157142273785200666_n.jpg?_nc_cat=106&_nc_sid=730e14&_nc_ohc=vys3ZUEEECsAX9xpVsx&_nc_ht=scontent.fssa7-1.fna&oh=9490d8133f08873b427c4493f72c01ba&oe=5F98B9ED" width="85" height="80"usemap="#workmap">
      </a>
      <map name="workmap">
        <area shape="rect" coords="-00,-00,130,98" alt="logo" href="http://localhost:3000/show-filial">
      </map>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/cliente">Cadastrar Clientes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/emprestimo">Cadastrar Empréstimos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/filial">Cadastrar Filiais</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/funcionario">Cadastrar Funcionários</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/livros">Cadastrar Livros</a>
        </li>
      </ul>
    </nav>

    <div class="container pt-3"></div>
    <h2>Editar Registro</h2>
    <% filial.forEach(function(details) { %>
      <form action="/edit-filial/<%= details._id %>" method="POST">
        <div class="container-fluid">
          <div class="jumbotron jumbotron-fluid">

              <div class="row">
                <div class="col-md-5">
                  <label id="lblNome">Nome:</label>
                  <input type="text" class="form-control" id="nome" value="<%= details.Inpname %>" name="Inpname">
                </div>    

                <div class="col-md-7 mb-3">
                  <label id="lblfantasia">Nome fantasia:</label>
                  <input type="text" class="form-control" id="fantasia" value="<%= details.InpFantasia %>" name="InpFantasia">
                </div>
              </div>
            
            <div class="row">
              <div class="col-md-3">
                <label id="Cnpj">CNPJ:</label>
                <input type="text" id="inpCnpj" class="form-control" maxlength="18" value="<%= details.inpCnpj %>" name="inpCnpj">
              </div>

              <div class="col-md-4">
                <label id="lblCont">Contato:</label>
                <input type="text" class="form-control" id="InpTel" maxlength="14" value="<%= details.InpTel %>" name="InpTel">
              </div>

              <div class="col-md-4 mb-3">
                <label id="lblEmail">Email:</label>
                <input type="text" class="form-control" id="email" value="<%= details.InpEmail %>" name="InpEmail">
              </div>
            </div>

            <div class="row">
              <div class="col-md-4 mb-3">
                <label id="lblEnd">Endereço:</label>
                <input type="text" class="form-control" id="endereco" value="<%= details.InpEnd %>" name="InpEnd">
              </div>
            </div>

            <div" class="row">
              <div class="col-md-4">
                <label id="lblCid">Cidade:</label>
                <input type="text" class="form-control" id="cidade" value="<%= details.InpCity %>" name="InpCity">
              </div>
            
              <div class="col-md-4">
                <label id="lblEst">Estado:</label>
                <input type="text" class="form-control" id="estado" value="<%= details.InpEs %>" name="InpEs">
              </div>
            </div>  
          </div>
        </div>      
       
    <button id="btnVoltar"><a href="/show-filial">Voltar</a></button> 
    <button id="btnEditar" type="submit">Editar</button>
  </form>
    <% }) %>
  </body>
</html>