<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" href="/logo/favicon.ico" />
        <link rel="stylesheet" href="/CSS/Main.css" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <script src="/JS/Main.js"></script>
        <title>CRUDNode</title>
    </head>

    <body>
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
            <a class="navbar-brand" href="">
                <img src="https://scontent.fssa7-1.fna.fbcdn.net/v/t1.0-9/119769804_3503780869658447_9157142273785200666_n.jpg?_nc_cat=106&_nc_sid=730e14&_nc_ohc=vys3ZUEEECsAX9xpVsx&_nc_ht=scontent.fssa7-1.fna&oh=9490d8133f08873b427c4493f72c01ba&oe=5F98B9ED" width="65" height="65" usemap="#workmap">
            </a>
            <map name="workmap">
                <area shape="rect" coords="-00,-00,130,98" alt="logo" href="http://localhost:3000/show-funcionario">
            </map>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/cliente">Cadastrar Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/emprestimo">Cadastrar Empréstimos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/filial">Cadastrar Filiais</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/funcionario">Cadastrar Funcionários</a>
              </li>
                <li class="nav-item">
                    <a class="nav-link" href="/livros">Cadastrar Livros</a>
                </li>
            </ul>
        </nav>

        <div class="container">
            <form method="POST">
                <div class="col-md-12 order-md-1">
                    <div class="row">
                        <div class="py-3 col-sm-8">
                            <h2><b>Editar registro</b></h2>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <div class="table-wrapper">
                        <table class="table table-striped table-hover table-bordered" id="myTable">
                            <thead>
                                <tr>
                                    <th class="form-title">Filial</th>
                                    <th class="form-title">Nome</th>
                                    <th class="form-title">Sobrenome</th>
                                    <th class="form-title">Cpf</th>
                                    <th class="form-title">Cep</th>
                                    <th class="form-title">Cidade</th>
                                    <th class="form-title">Estado</th>
                                    <th class="form-title">Endereço</th>
                                    <th class="form-title">Função</th>
                                    <th class="form-title">Contato</th>
                                    <th class="form-title">Salário</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% funcionario.forEach(function(details) { %>
                                <form action="/edit-funcionario/<%= details._id %>">
                                    <td>
                                        <input type="text" value="<%= details.filial%>" name="filial">
                                    </td>
                                    <td>
                                        <input type="text" value="<%= details.nome%>" name="nome">
                                    </td>
                                    <td>
                                        <input type="text" value="<%= details.sobrenome%>" name="sobrenome">
                                    </td>
                                    <td>
                                        <input type="text" value="<%= details.cpf%>" name="cpf">
                                    </td>
                                    <td>
                                        <input type="text" value="<%= details.cep%>" name="cep">
                                    </td>
                                    <td>
                                        <input type="text" value="<%= details.cidade%>" name="cidade">
                                    </td>
                                    <td>
                                        <input type="text" value="<%= details.estado%>" name="estado">
                                    </td>
                                    <td>
                                        <input type="text" value="<%= details.endereco%>" name="endereco">
                                    </td>
                                    <td>
                                        <input type="text" value="<%= details.funcao%>" name="funcao">
                                    </td>
                                    <td>
                                        <input type="text" value="<%= details.contato%>" name="contato">
                                    </td>
                                    <td>
                                        <input type="text" value="<%= details.salario%>" name="salario">
                                    </td>
                                </form>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <a href="/show-funcionario" class="btn btn-primary">Voltar</a>
                &nbsp;
                <input type="submit" class="btn btn-success" value="Confirmar"/>
            </form>
        </div>
    </body>
</html>