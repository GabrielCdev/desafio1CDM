<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <link rel="shortcut icon" href="/logo/favicon.ico" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
    <title>CRUD Library</title>
    <link rel="stylesheet" href="/css/showFilial.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
      <a class="navbar-brand" href="">
        <img src="https://scontent.fssa7-1.fna.fbcdn.net/v/t1.0-9/119769804_3503780869658447_9157142273785200666_n.jpg?_nc_cat=106&_nc_sid=730e14&_nc_ohc=vys3ZUEEECsAX9xpVsx&_nc_ht=scontent.fssa7-1.fna&oh=9490d8133f08873b427c4493f72c01ba&oe=5F98B9ED" width="85" height="80"usemap="#workmap">
      </a>
      <map name="workmap">
        <area shape="rect" coords="-00,-00,130,98" alt="logo" href="http://localhost:3000/show-filial">
      </map>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/cliente">Cadastrar Clientes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/emprestimo">Cadastrar Empréstimos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/filial">Cadastrar Filiais</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/funcionario">Cadastrar Funcionários</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/livros">Cadastrar Livros</a>
        </li>
      </ul>
    </nav>

    <h2>Registros</h2>
    <br>   

    <div class="container-fluid">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>Nome</th>
            <th>Nome fantasia</th>
            <th>CNPJ</th>
            <th>Email</th>
            <th>Contato</th>
            <th>Endereço</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>Ação</th>
          </tr>
        </thead>

        <tbody>
          <% filial.forEach(function(details) { %>
            <tr>
              <td><%= details.Inpname %></td>
              <td><%= details.InpFantasia %></td>
              <td><%= details.inpCnpj %></td>
              <td><%= details.InpEmail %></td>
              <td><%= details.InpTel %></td>
              <td><%= details.InpEnd %></td>
              <td><%= details.InpCity %></td>
              <td><%= details.InpEs %></td>
              <td><a href="/edit-filial/<%= details._id %>"class="edit" title="Editar" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a> - <a href="/delete-filial/<%= details._id %>"class="delete" title="Remover" data-toggle="tooltip" ><i class="material-icons">&#xE872;</i></a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div> 
        
    <div id="div5" class="container">
      <div class="row">
        <button id="btnNovo"><a href="/filial">Novo</a></button>
      </div>
    </div>     
    <br>
  </body>
</html>